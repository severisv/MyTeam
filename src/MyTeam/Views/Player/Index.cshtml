@using System.Threading.Tasks
@using MyTeam.Models.Domain
@using MyTeam.Resources
@model MyTeam.ViewModels.Player.ShowPlayersViewModel

@{
    ViewBag.Title = Res.Players;
}
<div mt-main  inner-id="show-players">

    @foreach (var player in Model.Players)
    {
        <a data-ajax="true" data-ajax-mode="replace" data-ajax-update="#show-players" asp-controller="player" asp-action="show" asp-route-playerid="@player.Id" class="col-lg-3 col-md-4 col-xs-4 text-center mt-player-container">
            <div class="image-container">
                <img src="@Url.Content(player.ImageMedium)" title="@Html.DisplayFor(p => player.Name)" alt="">
            </div>
            <p>@Html.DisplayFor(p => player.Name)</p>
        </a>

    }

    @if (!Model.Players.Any())
    {
        <div class="alert alert-info">@Messages.NoPlayers</div>
    }
</div>

<div mt-sidebar>
    <ul class="nav nav-list">
        <li class="nav-header">@Res.Submenu</li>
        <li><a asp-controller="player" asp-action="index" asp-route-type="@PlayerStatus.Aktiv"><i class='fa fa-user'></i> @Res.PlayersOfType(PlayerStatus.Aktiv)</a></li>
        <li><a asp-controller="player" asp-action="index" asp-route-type="@PlayerStatus.Pensjonert"><i class='fa fa-trophy'></i> @Res.PlayersOfType(PlayerStatus.Pensjonert)</a></li>
    </ul>
</div>
@if (Model.Players.Any())
{
    <div mt-sidebar>
        <ul class="nav nav-list">
            <li class="nav-header">@ViewBag.PageName</li>
            @foreach (var player in Model.Players)
            {
                <li><a data-ajax="true" data-ajax-mode="replace" data-ajax-update="#show-players" asp-controller="player" asp-action="show" asp-route-playerid="@player.Id">@player.Name</a></li>

            }
        </ul>
    </div>
}



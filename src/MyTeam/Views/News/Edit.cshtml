@using System.ComponentModel
@using Microsoft.EntityFrameworkCore.Metadata.Internal
@using MyTeam
@model MyTeam.ViewModels.News.EditArticleViewModel
@{
    ViewBag.Title = Model.IsNew ? "Skriv artikkel" : "Rediger artikkel";
}

<div class="mt-sidebar">
    <div class="mt-container">
        @await Component.InvokeAsync("ArticleNav", Context.GetClub().Id)
    </div>
</div>

<div mt-main>
    @Html.Partial("_Edit")
</div>

@section Scripts {
    @await Component.InvokeAsync("CloudinaryScripts")
    @Html.Partial("Scripts/_TinyMCE", "Content")
}
@using System.Threading.Tasks
@using MyTeam.ViewModels.News
@model PostCommentViewModel

<div id="article-commentForm">
    <form asp-controller="News" asp-action="PostComment">
        <input type="hidden" asp-for="ArticleId"/>
        <span asp-validation-for="Content" class="text-danger"></span>
        <span id="comment-validation-text" class="text-danger"></span>
        <textarea asp-for="Content" 
                       class="form-control"
                       placeholder="Skriv din kommentar"></textarea>
        <button class="btn btn-primary" type="submit"><span class="submitLoader"><i class="fa fa-spinner fa-spin"></i></span><span class="submitText">Kommentér</span></button>
    </form>
</div>
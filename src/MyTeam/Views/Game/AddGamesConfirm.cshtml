@using System.Threading.Tasks
@model MyTeam.ViewModels.Game.AddGamesViewModel
@{
    ViewBag.Title = "Bekreft terminliste";
}
<div class="mt-container">
    <div class="col-xs-12">
        <table id="gamesTable" class="table gamesTable table--striped">
            <tbody>
                @foreach (var game in Model.Games.Games)
                {
                    <tr>
                        <td class="hidden-xs gameType"><i title="@game.GameType" class="@Icons.GameType(game.GameType)"></i></td>
                        <td class="hidden-xs"><i class="text-subtle fa fa-calendar"></i> @game.DateTime.ToNoShort()</td>
                        <td class="gamesTable-team gamesTable-team--left">@game.HomeTeam</td>
                        <td class="gamesTable-team"><span class="gameResult gameResult--@game.Outcome">@game.HomeScore - @game.AwayScore</span></td>
                        <td class="gamesTable-team gamesTable-team--right">@game.AwayTeam</td>
                        <td class="hidden-xs"><i class="text-subtle fa fa-map-marker"></i> @game.LocationShort</td>
                    </tr>
                }
            </tbody>
        </table>
        <form asp-action="AddGamesConfirm" method="post">
            <div asp-validation-summary="ValidationSummary.All" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="GamesString" type="hidden"/>
                <input asp-for="TeamId" type="hidden"/>
                <input asp-for="GameType" type="hidden"/>
                @for (int i = 0; i < Model.Teams.Count(); i++)
                {
                    <input type="hidden" asp-for="Teams[i].Id" />
                    <input type="hidden" asp-for="Teams[i].Name"/>
                    <input type="hidden" asp-for="Teams[i].ShortName" />
                }
                <span asp-validation-for="TeamId" class="text-danger"></span>            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">@Res.Save</button>
            </div>
        </form>
    </div>
</div>

@using System.Linq
@using System.Threading.Tasks
@using Microsoft.AspNet.Mvc.Rendering
@using MyTeam.Models.Enums
@using MyTeam.Resources
@using MyTeam.ViewModels.Events
@model MyTeam.ViewModels.Events.EventViewModel


<div id="event-signup-@Model.Id" class="event-signup">

    @if (Model.SignupHasOpened())
    {
        @Html.Partial("_SignupDetails")
    }
    else
    {
        <div mt-alert="@AlertType.InfoSubtle">
            @Res.SignupNotAllowed
        </div>
    }
</div>

<div class="clearfix"></div>
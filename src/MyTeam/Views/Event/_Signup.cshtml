@using MyTeam
@using MyTeam.Models.Enums
@model MyTeam.ViewModels.Events.EventViewModel


<div id="event-signup-@Model.Id" class="event-signup">
    @if (!Context.Member().BelongsToTeam(Model.TeamIds.ToArray()) && Model.GameType != GameType.Treningskamp)
    {
        <div mt-alert="AlertType.Info">Du er ikke registrert som medlem av noen av lagene dette arrangementet gjelder</div>
    }
    else if (Model.SignupHasOpened())
    {
        @Html.Partial("_SignupDetails")
    }

</div>

<div class="clearfix"></div>